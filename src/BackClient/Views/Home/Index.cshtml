@{
    ViewData["Title"] = "Home Page";
}

<form action="home/SendTask" method="post">
    <div class="form-group">
        <label for="InputTask">Task</label>
        <input  class="form-control" name="inputTask" id="InputTask" aria-describedby="TaskHelp" placeholder="Enter Task" value="">
        <small id="TaskHelp" class="form-text text-muted">You should Describe your task</small>
    </div>
    <div class="form-group">
            <label for="inputData">Task</label>
            <input  class="form-control" name="inputData" id="inputData" aria-describedby="TaskHel" placeholder="Enter text to estimate description" value="">
